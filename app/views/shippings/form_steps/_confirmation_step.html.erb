<h3>Confirmation Step</h3>

<div class="js-error-messages">
</div>

<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <table class="table">
      <tbody>
        <tr>
          <th>Receiver Name</th>
          <td><%= shipping.receiver_name %></td>
        </tr>
        <tr>
          <th>Receiver Phone</th>
          <td><%= shipping.receiver_phone %></td>
        </tr>
        <tr>
          <th>Shipping Address</th>
          <td><%= shipping.shipping_address %></td>
        </tr>
        <tr>
          <th>Shipping Day</th>
          <td><%= shipping.shipping_day %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <div class="col-xs-6 text-left">
      <div class="previous">
        <button class="btn btn-primary js-button-pre" type="button" data-step-index="2">
          Previous Step
        </button>
      </div>
    </div>

    <div class="col-xs-6 text-right">   
      <div class="next">
        <button class="btn btn-primary" type="commit">
          Submit
        </button>
      </div>
    </div>
  </div>
</div>
