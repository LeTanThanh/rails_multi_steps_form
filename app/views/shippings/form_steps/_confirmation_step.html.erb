      <div class="previous">
        <button class="btn btn-primary js-button-pre" type="button" data-step-index="2">
          Previous Step
        </button>
      </div>
    </div>

    <div class="col-xs-6 text-right">   
      <div class="next">
        <%= form.submit "Done", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
