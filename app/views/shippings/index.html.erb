<p id="notice"><%= notice %></p>

<h1>Shippings</h1>

<table>
  <thead>
    <tr>
      <th>Receiver name</th>
      <th>Receiver phone</th>
      <th>Shipping address</th>
      <th>Shipping day</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shippings.each do |shipping| %>
      <tr>
        <td><%= shipping.receiver_name %></td>
        <td><%= shipping.receiver_phone %></td>
        <td><%= shipping.shipping_address %></td>
        <td><%= shipping.shipping_day %></td>
        <td><%= link_to 'Show', shipping %></td>
        <td><%= link_to 'Edit', edit_shipping_path(shipping) %></td>
        <td><%= link_to 'Destroy', shipping, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

